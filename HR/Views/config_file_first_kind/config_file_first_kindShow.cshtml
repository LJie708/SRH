
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>I级机构设置</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
</head>
<body>
    <div id="cz">
        <table style="width:100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <a href="/config_file_first_kind/Add" class="btn btn-default BUTTON_STYLE1">添加</a>
                </td>
            </tr>
        </table>
        <table style="width:100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="20%" class="TD_STYLE1">
                    I级机构编号
                </td>
                <td width="20%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="25%" class="TD_STYLE1">
                    薪酬发放责任人编号
                </td>
                <td width="25%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            <tr v-for="(item,index) in xs">
                <td class="TD_STYLE2">{{item.first_kind_id}}</td>
                <td class="TD_STYLE2">{{item.first_kind_name}}</td>
                <td class="TD_STYLE2">{{item.first_kind_salary_id}}</td>
                <td class="TD_STYLE2">{{item.first_kind_sale_id}}</td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_file_first_kind/Update/'+item.Id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                    @*"['/config_major_kind/major_kind_Del/'+item.Id+'?kind_id='+item.major_kind_id]"*@ 
                    <a v-bind:href="['/config_file_first_kind/Delete/'+item.Id+'?fid='+item.first_kind_id]" onclick="return confirm('是否确认删除?')">删除</a>
                </td>
            </tr>
        </table>
    </div>

    <script type="text/javascript">
        var vm = new Vue({
            el: "#cz",
            data: {
                xs: "",
            },
            methods: {
                load: function () {
                    var l = this;
                    $.ajax({
                        url: "/config_file_first_kind/SelectAll",
                        type: "post",
                        success: function (result) {
                            var res = eval("(" + result + ")");
                            l.xs = res;
                        }
                    })
                }
            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>

