
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>III级机构管理</title>
    <link rel="stylesheet" href="../../css/table.css"
          type="text/css"/>
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <div id="cz">
        <table style="width:100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <a v-bind:href="['/config_file_third_kind/Add']" class="BUTTON_STYLE1">添加</a>
                </td>
            </tr>
        </table>
        <table style="width:100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="14%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构名称
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="14%" class="TD_STYLE1">
                    III级机构名称
                </td>
                <td width="17%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="17%" class="TD_STYLE1">
                    是否为零售店
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            <tr v-for="(item,index) in xs">
                <td class="TD_STYLE2">
                    {{item.first_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_sale_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_is_retail}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_file_third_kind/Update/'+item.Id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_file_third_kind/Delete/'+item.Id]" onclick="return confirm('是否确认删除?')">删除</a>
                </td>
            </tr>
        </table>
    </div>

    <script type="text/javascript">
        var vm = new Vue({
            el: "#cz",
            data: {
                xs: "",
            },
            methods: {
                load: function () {
                    var l = this;
                    $.ajax({
                        url: "/config_file_third_kind/SelectAll",
                        type: "post",
                        success: function (result) {
                            var res = eval("(" + result + ")");
                            l.xs = res;
                        }
                    })
                }
            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
