
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="div1">     
        <table width="100%">
            <tbody>
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--薪酬管理设置--薪酬项目设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <a class="btn btn-default" href="/salary_grant_type/Add">添加</a>
                    </td>
                </tr>
            </tbody>
        </table>
        @* cellpadding="0" cellspacing="1" *@
        <table width="100%" border="1"  bordercolorlight="#848284" bordercolordark="#eeeeee" class="TABLE_STYLE1">
            <tbody>
                <tr height="20">
                    <td width="80%" class="TD_STYLE1" align="center">
                        薪酬项目名称
                    </td>
                    <td width="20%" class="TD_STYLE1" align="center">
                        删除
                    </td>
                </tr>
                <tr v-for="(item,index) in list">
                    <td class="TD_STYLE2">{{item.grant_type_name}}</td>0
                    <td class="TD_STYLE2"><a v-bind:href="'/salary_grant_type/Delete/'+item.Id" onclick="return confirm('是否删除？')">删除</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                list: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/salary_grant_type/Index2",
                        type: "post",
                        success: function (msg) {
                            var dt = eval("(" + msg + ")");
                            t.list = dt;
                        }
                    });
                }
            }, created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
