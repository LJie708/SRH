@model salary_grant_typeModel
@{
    Layout = null;
}
@using Model
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" href="../../css/table.css" type="text/css">
    <script type="text/javascript" src="../../javascript/comm/comm.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
		function check(){
			if (document.getElementById("publicChar.attributeName").value==""){
				alert("薪酬项目名称不能为空!!!");
				return false;
			}
			document.forms[0].submit();
		}

    </script>
</head>
<body>
    <div>
        @using (Html.BeginForm("Add", "salary_grant_type", FormMethod.Post))
        {
            <table width="100%">
                <tbody>
                    <tr>
                        <td>
                            <font color="black">
                                您正在做的业务是：人力资源--客户化设置--薪酬管理设这--薪酬项目设置--薪酬项目添加
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            <input type="submit" value="提交" class="BUTTON_STYLE1">
                            <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
                        </td>
                    </tr>
                </tbody>
            </table>

            <table width="100%" border="1" cellpadding="0" cellspacing="1" bordercolorlight="#848284" bordercolordark="#eeeeee" class="TABLE_STYLE1">
                <tbody>
                    <tr>
                        <td class="TD_STYLE1" width="19%">
                            @Html.Label("薪酬项目名称")
                        </td>
                        <td class="TD_STYLE2" width="81%">
                            @Html.TextBox("grant_type_name", null)
                            @Html.ValidationMessage("grant_type_name")
                        </td>
                    </tr>
                </tbody>
            </table>
        }
        </div>
</body>
</html>
