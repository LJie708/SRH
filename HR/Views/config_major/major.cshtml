
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>major</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/vue-2.4.0.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <div id="div1">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                <a class="btn btn-primary" href="~/config_major/major_add">添加</a></td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="22%" class="TD_STYLE1">
                    职位分类编号
                </td>
                <td width="23%" class="TD_STYLE1">
                    职位分类名称
                </td>
                <td width="26%" class="TD_STYLE1">
                    职位编号
                </td>
                <td width="24%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>


            <tr v-for="(item,index) in list">
                <td class="TD_STYLE2">
                    {{item.major_kind_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.major_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.major_id}}
                </td>
                <td class="TD_STYLE2">
                   {{item.major_name}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_major/major_Del/'+item.Id]" onclick="return confirm('确认要删除嘛？')">删除</a>
                </td>
            </tr>

        </table>
    </div>

    <script type="text/javascript">

        var vm = new Vue({
            el: "#div1",
            data: {
                list: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_major/mjSel",
                        type: "post",
                        success: function (msg) {
                            var dt = eval("(" + msg + ")");
                            t.list = dt;
                        }
                    });
                }

            },
            created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
