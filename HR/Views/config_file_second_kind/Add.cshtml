@model config_file_second_kindModel
@{
    Layout = null;
}
@using Model
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>II级机构添加</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        function Exit() {
            location.href = "/config_file_second_kind/config_file_second_kindShow";
        }
    </script>
</head>
<body>
    @using (Html.BeginForm("AddSecond", "config_file_second_kind", FormMethod.Post))
    {
        <table style="width:100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="Exit()">
                </td>
            </tr>
        </table>
        <table style="width:100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="19%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="81%" class="TD_STYLE2">
                    @Html.DropDownList("first_kind_id",ViewBag.jg as IEnumerable<SelectListItem>,new { @class= "form-control" })
                </td>
            </tr>
            <tr>
                <td width="19%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="81%" class="TD_STYLE2">
                    @*@Html.TextBox("first_kind_id", null, new { @class = "form-control" })*@
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    II级机构名称
                </td>
                <td class="TD_STYLE2">
                    @Html.TextBox("second_kind_name", null, new { @class = "form-control" })
                    @Html.ValidationMessage("second_kind_name")
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                    @Html.TextArea("second_salary_id", null, 8, 100, new { @class = "form-control" })
                    @Html.ValidationMessage("second_salary_id")
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1">
                    销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                </td>
                <td class="TD_STYLE2">
                    @Html.TextArea("second_sale_id", null, 8, 100, new { @class = "form-control" })
                    @Html.ValidationMessage("second_sale_id")
                </td>
            </tr>
        </table>
    }
</body>
</html>
