@model engage_major_releaseModel
@{
    Layout = null;
}
@using Model
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>职位发布明细</title>
    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">
    </script>
</head>
<body>
    @using (Html.BeginForm("Create", "engage_resume", FormMethod.Post)) {
    <table width="100%">
        <tr>
            <td>
                <font color="black">您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布查询--详细  </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="submit" value="确认申请" class="BUTTON_STYLE1" />
                <input type="button" value="返回" class="BUTTON_STYLE1" onclick="history.back();">
            </td>
        </tr>
    </table>
    <table width="100%" border="1" cellpadding=0 cellspacing=1
           bordercolorlight=#848284 bordercolordark=#eeeeee
           class="TABLE_STYLE1">
        <tr>
            <td class="TD_STYLE1" width="11%">
                I级机构
            </td>
            <td width="14%" class="TD_STYLE2">
                @Html.TextBox("first_kind_name",Model.first_kind_name,new { @readonly = "readonly",@style="width:97%"})
            </td>
            <td width="11%" class="TD_STYLE1">
                II级机构
            </td>
            <td width="14%" class="TD_STYLE2">
                @Html.TextBox("second_kind_name", Model.second_kind_name, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td width="11%" class="TD_STYLE1">
                III级机构
            </td>
            <td class="TD_STYLE2">
                @Html.TextBox("third_kind_name", Model.third_kind_name, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td width="11%" class="TD_STYLE1">
                招聘类型
            </td>
            <td class="TD_STYLE2" colspan="2">
                @Html.TextBox("engage_type", Model.engage_type, new { @readonly = "readonly", @style = "width:97%" })
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                职位分类
            </td>
            <td class="TD_STYLE2">
                @Html.Hidden("major_kind_name", Model.major_kind_name)
                @Html.Hidden("major_kind_id", Model.major_kind_id)
                @Html.TextBox("major_kind_name", Model.major_kind_name, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td class="TD_STYLE1">
                职位名称
            </td>
            <td class="TD_STYLE2">
                @Html.Hidden("major_name", Model.major_name)
                @Html.Hidden("major_id", Model.major_id)
                @Html.TextBox("major_name", Model.major_name, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td class="TD_STYLE1">
                招聘人数
            </td>
            <td class="TD_STYLE2">
                @Html.TextBox("human_amount", Model.human_amount, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td class="TD_STYLE1">
                截止日期
            </td>
            <td class="TD_STYLE2">
                @Html.TextBox("deadline", Model.deadline, new { @readonly = "readonly", @style = "width:97%" })
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                登记人
            </td>
            <td class="TD_STYLE2">
                @Html.TextBox("register", Model.register, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td class="TD_STYLE1">
                登记时间
            </td>
            <td class="TD_STYLE2">
                @Html.TextBox("regist_time", Model.regist_time, new { @readonly = "readonly", @style = "width:97%" })
            </td>
            <td>&nbsp; </td>
            <td>&nbsp; </td>
            <td>&nbsp; </td>
            <td>&nbsp; </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                职位描述
            </td>
            <td class="TD_STYLE2" colspan="8">
                @Html.TextArea("major_describe", Model.major_describe, new { @readonly = "readonly", @style = "width:100%" })
            </td>
        </tr>
        <tr>
            <td class="TD_STYLE1">
                招聘要求
            </td>
            <td class="TD_STYLE2" colspan="8">
                @Html.TextArea("engage_required", Model.engage_required, new { @readonly = "readonly", @style = "width:100%" })
            </td>
        </tr>
    </table>
    }
</body>
</html>
